root = true
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
[{*.md,*.mdx,LICENSE*}]
# double whitespace at end of line
# denotes a line break in Markdown
indent_size = off
trim_trailing_whitespace = false
[{Makefile*,*.mk,*.sh}]
indent_style = tab
[{*.ts,*.tsx,*.html,*.yml,*.yaml,*.yaml.tftpl,*.toml,*.json,*.tf,*.hcl,*.js}]
indent_size = 2
